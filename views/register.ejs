<!DOCTYPE html>
<html>

<% include partials/_head %>

<body>
  <% include partials/_header %>
  <div class="wrapper">
    <main>
      <form action="" class="registration" method='POST'>
        <label for="name">Name</label>
        <input id="name" type="text" name="userName" placeholder="Enter your name" minlength=3>
        <label for="email">Email</label>
        <input id="email" type="email" name="userEmail" placeholder="Enter your email address">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" placeholder="Enter your password" minlength=5>
        <input type="password" name="confPassword" placeholder="Confirm the password" minlength=5>
        <button class="user-button">Create an account</button>
        <% if (error != '') { %>
        <p class="error">
          <%= error %>
        </p>
        <% } %>
      </form>
    </main>
  </div>
  <% include partials/_footer %>
</body>

</html>